<?xml version="1.0" encoding="utf-8"?>
<com.gauravk.bubblenavigation.BubbleNavigationConstraintView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_constraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="380dp"
    android:background="@color/white"
    android:elevation="4dp"
    android:padding="12dp"
    app:bnc_mode="spread"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/main_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:bt_active="true"
        app:bt_colorActive="@color/search_active"
        app:bt_colorInactive="@color/search_inactive"
        app:bt_icon="@drawable/ic_cloud_black_24dp"
        app:bt_padding="@dimen/internal_padding"
        app:bt_shape="@drawable/transition_background_drawable_restaurant"
        app:bt_title="@string/restaurant"
        app:bt_titlePadding="@dimen/title_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forum_page"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/user_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:bt_active="true"
        app:bt_colorActive="@color/search_active"
        app:bt_colorInactive="@color/search_inactive"
        app:bt_icon="@drawable/ic_cloud_black_24dp"
        app:bt_padding="@dimen/internal_padding"
        app:bt_shape="@drawable/transition_background_drawable_restaurant"
        app:bt_title="@string/restaurant"
        app:bt_titlePadding="@dimen/title_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notification_page"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/notification_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        app:bt_active="true"
        app:bt_colorActive="@color/search_active"
        app:bt_colorInactive="@color/search_inactive"
        app:bt_icon="@drawable/ic_cloud_black_24dp"
        app:bt_padding="@dimen/internal_padding"
        app:bt_shape="@drawable/transition_background_drawable"
        app:bt_title="@string/restaurant"
        app:bt_titlePadding="@dimen/title_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/user_page"
        app:layout_constraintStart_toEndOf="@+id/forum_page"
        app:layout_constraintTop_toTopOf="parent" />

    <com.gauravk.bubblenavigation.BubbleToggleView
        android:id="@+id/forum_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:bt_active="true"
        app:bt_colorActive="@color/search_active"
        app:bt_colorInactive="@color/search_inactive"
        app:bt_icon="@drawable/ic_cloud_black_24dp"
        app:bt_padding="@dimen/internal_padding"
        app:bt_shape="@drawable/transition_background_drawable_restaurant"
        app:bt_title="@string/restaurant"
        app:bt_titlePadding="@dimen/title_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notification_page"
        app:layout_constraintStart_toEndOf="@+id/main_page"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Add more child items here - max upto 5 -->

</com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
